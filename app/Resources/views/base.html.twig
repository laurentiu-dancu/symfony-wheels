<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Wheels!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('build/styles.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('images/favi.gif') }}" />
    </head>
    <body>
        <div class="animation-hue-item" id="background-image"></div>
        <div class="content">
            {{ redux_store('AppStore', props|merge({'categories': categories()})) }}
            {{ react_component('BlogApp') }}
        </div>
        {% block javascripts %}
            <script src="{{ asset('build/app.js') }}"></script>
        {% endblock %}
    </body>
</html>
